local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Notification setup
local NotificationHolder = loadstring(game:HttpGet("https://raw.githubusercontent.com/BocusLuke/UI/main/STX/Module.Lua"))()
local Notification = loadstring(game:HttpGet("https://raw.githubusercontent.com/BocusLuke/UI/main/STX/Client.Lua"))()

Notification:Notify(
    {Title = "Thanks for using Rinns Hub.", Description = "Join the discord https://discord.com/invite/rCRPBsxYAa and ONLY CLICK THE RUN BUTTON ONCE or it will run the selected script twice or more"},
    {OutlineColor = Color3.fromRGB(80, 80, 80), Time = 5, Type = "default"}
)

-- Create the ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CustomUI"
screenGui.IgnoreGuiInset = true -- Make sure UI ignores safe zone padding
screenGui.Parent = PlayerGui

-- Create the main frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 300)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
mainFrame.BorderSizePixel = 0
mainFrame.ClipsDescendants = true -- Clip contents to prevent overflow
mainFrame.Parent = screenGui

-- Add UI corner to the main frame
local mainFrameCorner = Instance.new("UICorner")
mainFrameCorner.CornerRadius = UDim.new(0, 12)
mainFrameCorner.Parent = mainFrame

-- Create a UI gradient for the main frame
local uiGradient = Instance.new("UIGradient")
uiGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(20, 20, 20)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(36, 36, 36))
}
uiGradient.Parent = mainFrame

-- Create the "Rinns Hub" label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 30)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Rinns Hub"
titleLabel.TextScaled = true
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.Parent = mainFrame

-- Create the "spotm" button
local spotmButton = Instance.new("TextButton")
spotmButton.Size = UDim2.new(0, 160, 0, 40)
spotmButton.Position = UDim2.new(0, 10, 0, 40)
spotmButton.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
spotmButton.TextColor3 = Color3.fromRGB(255, 255, 255)
spotmButton.TextScaled = true
spotmButton.Text = "spotm"
spotmButton.Parent = mainFrame

-- Add UI corner to the spotm button
local spotmButtonCorner = Instance.new("UICorner")
spotmButtonCorner.CornerRadius = UDim.new(0, 12)
spotmButtonCorner.Parent = spotmButton

-- Create the "Murderers vs Sheriff's Duels" button
local mvssButton = Instance.new("TextButton")
mvssButton.Size = UDim2.new(0, 160, 0, 40)
mvssButton.Position = UDim2.new(0, 10, 0, 90)
mvssButton.BackgroundColor3 = Color3.fromRGB(85, 85, 255)
mvssButton.TextColor3 = Color3.fromRGB(255, 255, 255)
mvssButton.TextScaled = true
mvssButton.Text = "Murderers vs Sheriff's Duels"
mvssButton.Parent = mainFrame

-- Add UI corner to the mvss button
local mvssButtonCorner = Instance.new("UICorner")
mvssButtonCorner.CornerRadius = UDim.new(0, 12)
mvssButtonCorner.Parent = mvssButton

-- Create the image button (instead of image label)
local imageButton = Instance.new("ImageButton")
imageButton.Size = UDim2.new(0, 160, 0, 160)
imageButton.Position = UDim2.new(1, -180, 0, 40)
imageButton.BackgroundTransparency = 1
imageButton.Image = "rbxassetid://123456789" -- Default image
imageButton.Parent = mainFrame

-- Create the "Run Script" button
local runButton = Instance.new("TextButton")
runButton.Size = UDim2.new(0, 160, 0, 40)
runButton.Position = UDim2.new(1, -180, 0, 190) -- Moved up
runButton.TextColor3 = Color3.fromRGB(255, 255, 255)
runButton.TextScaled = true
runButton.Text = "Run Script"
runButton.Parent = mainFrame

-- Add UI gradient to the run button
local runButtonGradient = Instance.new("UIGradient")
runButtonGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(74, 255, 225)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(11, 232, 190))
}
runButtonGradient.Parent = runButton

-- Add UI corner to the run button
local runButtonCorner = Instance.new("UICorner")
runButtonCorner.CornerRadius = UDim.new(0, 12)
runButtonCorner.Parent = runButton

-- Create the "Exit" button
local exitButton = Instance.new("TextButton")
exitButton.Size = UDim2.new(0, 160, 0, 40)
exitButton.Position = UDim2.new(1, -180, 0, 240) -- Moved up
exitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
exitButton.TextScaled = true
exitButton.Text = "Exit"
exitButton.Parent = mainFrame

-- Add UI gradient to the exit button
local exitButtonGradient = Instance.new("UIGradient")
exitButtonGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(238, 18, 84)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 80, 83))
}
exitButtonGradient.Parent = exitButton

-- Add UI corner to the exit button
local exitButtonCorner = Instance.new("UICorner")
exitButtonCorner.CornerRadius = UDim.new(0, 12)
exitButtonCorner.Parent = exitButton

local scriptToRun = ""

-- Function to handle the "spotm" button click
spotmButton.MouseButton1Click:Connect(function()
    scriptToRun = "https://raw.githubusercontent.com/R1nn1/Spotm-script/main/Main%20loadstring"
    imageButton.Image = "rbxassetid://17834987668" -- Change to your specific image asset ID for spotm
end)

-- Function to handle the "Murderers vs Sheriff's Duels" button click
mvssButton.MouseButton1Click:Connect(function()
    scriptToRun = "https://raw.githubusercontent.com/R1nn1/B-1/main/Script"
    imageButton.Image = "rbxassetid://17818460317" -- Change to your specific image asset ID for Murderers vs Sheriff's Duels
end)

-- Function to handle the "Run Script" button click
runButton.MouseButton1Click:Connect(function()
    if scriptToRun ~= "" then
        loadstring(game:HttpGet(scriptToRun))()
        mainFrame:TweenSize(UDim2.new(0, 0, 0, 0), Enum.EasingDirection.In, Enum.EasingStyle.Quart, 0.5, true)
        wait(0.5)
        screenGui:Destroy()
    else
        print("No script selected")
    end
end)

-- Exit button click event
exitButton.MouseButton1Click:Connect(function()
    mainFrame:TweenSize(UDim2.new(0, 0, 0, 0), Enum.EasingDirection.In, Enum.EasingStyle.Quart, 0.5, true)
    wait(0.5)
    screenGui:Destroy()
end)
